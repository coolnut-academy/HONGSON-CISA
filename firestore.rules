rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user role - with null safety
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Check if user has admin role
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role in ['admin', 'super_admin'];
    }
    
    // Check if user is super_admin
    function isSuperAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role == 'super_admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read all users (with existence check)
      allow read: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
      // Users can create their own document (for registration)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Users can update their own document
      allow update: if isAuthenticated() && request.auth.uid == userId;
      // Super admin can update ANY user document (for role management)
      allow update: if isSuperAdmin();
      // Only super_admin can delete users
      allow delete: if isSuperAdmin();
    }
    
    // Pre-registered students collection
    match /pre_registered_students/{studentId} {
      // Allow reading for login verification (needed during registration)
      allow get: if true;
      // Admins can read list
      allow list: if isAdmin();
      // Only super_admin can write
      allow write: if isSuperAdmin();
    }
    
    // Exams collection - SIMPLIFIED: All authenticated users can read
    match /exams/{examId} {
      // Any authenticated user can read exams (students, admins, etc.)
      allow read: if isAuthenticated();
      // Only admins can create/update/delete exams
      allow write: if isAdmin();
    }
    
    // Submissions collection
    match /submissions/{submissionId} {
      // Allow 'get' for ANY authenticated user if the doc is missing (returns exists: false)
      // or if it's their own document.
      allow get: if isAuthenticated() && (resource == null || resource.data.studentId == request.auth.uid || isAdmin());
      
      // 'list' still restricted to own docs or admins
      allow list: if isAdmin() || (isAuthenticated() && resource.data.studentId == request.auth.uid);
      
      // Authenticated users can create submissions
      allow create: if isAuthenticated();
            
      // Only admins can update/delete
      allow update, delete: if isAdmin();
    }

    // Submission Archives collection (for history)
    match /submission_archives/{archiveId} {
      // Allow 'get' similarly to submissions
      allow get: if isAuthenticated() && (resource == null || resource.data.studentId == request.auth.uid || isAdmin());
      
      // Admins can manage everything
      allow list, create, update, delete: if isAdmin();
      
      // Students can list their own archives
      allow list: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }

    
    // AI Grading config/results
    match /ai_grading/{gradingId} {
      allow read: if isAdmin();
      allow write: if isSuperAdmin();
    }
    
    // System settings
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
  }
}
