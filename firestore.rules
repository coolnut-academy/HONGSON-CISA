rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user role - with null safety
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Check if user has admin role
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role in ['admin', 'super_admin'];
    }
    
    // Check if user is super_admin
    function isSuperAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role == 'super_admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read all users (with existence check)
      allow read: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
      // Users can create their own document (for registration)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Users can update their own document
      allow update: if isAuthenticated() && request.auth.uid == userId;
      // Only super_admin can delete users
      allow delete: if isSuperAdmin();
    }
    
    // Pre-registered students collection
    match /pre_registered_students/{studentId} {
      // Allow reading for login verification (needed during registration)
      allow get: if true;
      // Admins can read list
      allow list: if isAdmin();
      // Only super_admin can write
      allow write: if isSuperAdmin();
    }
    
    // Exams collection - SIMPLIFIED: All authenticated users can read
    match /exams/{examId} {
      // Any authenticated user can read exams (students, admins, etc.)
      allow read: if isAuthenticated();
      // Only admins can create/update/delete exams
      allow write: if isAdmin();
    }
    
    // Submissions collection
    match /submissions/{submissionId} {
      // Users can read their own submissions
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      // Admins can read all submissions
      allow read: if isAdmin();
      // Authenticated users can create submissions
      allow create: if isAuthenticated();
      // Only admins can update submissions (for grading)
      allow update: if isAdmin();
      // Prevent deletion
      allow delete: if false;
    }
    
    // AI Grading config/results
    match /ai_grading/{gradingId} {
      allow read: if isAdmin();
      allow write: if isSuperAdmin();
    }
    
    // System settings
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
  }
}
