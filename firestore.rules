rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user has admin role
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }
    
    // Check if user is super_admin
    function isSuperAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // Users collection
    match /users/{userId} {
      allow get: if isAuthenticated() && request.auth.uid == userId;
      allow list: if isAdmin();
      allow create, update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isSuperAdmin();
    }
    
    // Pre-registered students
    match /pre_registered_students/{studentId} {
      allow get: if true;
      allow list: if isAdmin();
      allow write: if isSuperAdmin();
    }
    
    // Exams - all authenticated users can read
    match /exams/{examId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Submissions
    match /submissions/{submissionId} {
      // GET: own document or admin
      allow get: if isAuthenticated() && 
        (resource == null || resource.data.studentId == request.auth.uid || isAdmin());
      
      // LIST: allow authenticated users (student can see own via client-side filter)
      allow list: if isAuthenticated();
      
      // CREATE: Only through Cloud Function
      allow create: if false;
            
      // UPDATE/DELETE: Only admins
      allow update, delete: if isAdmin();
    }

    // Submission Archives
    match /submission_archives/{archiveId} {
      // GET: own document or admin
      allow get: if isAuthenticated() && 
        (resource == null || resource.data.studentId == request.auth.uid || isAdmin());
      
      // LIST: allow authenticated users to list (student filters by own studentId in query)
      allow list: if isAuthenticated();
      
      // CREATE/UPDATE/DELETE: Only admins
      allow create, update, delete: if isAdmin();
    }

    // AI Grading
    match /ai_grading/{gradingId} {
      allow read: if isAdmin();
      allow write: if isSuperAdmin();
    }
    
    // System settings
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
  }
}
